<div style="margin-right: 2%; margin-bottom: 10px; text-align: center">
   <a>
       <img src="@Pelicula.Poster" alt="Poster" style="width: 225px; height:300px;" />
   </a>
   <p style="max-width: 225px; height:44px; font-size:15px; font-weight: bold;">@Pelicula.TituloCortado</p>
   <div>
       <a class="btn btn-info">Editar</a>
       <button type="button" class="btn btn-danger" @onclick="@(() => EliminarPeliculaCallBack.InvokeAsync(Pelicula))">
           Borrar
       </button>
   </div>
</div>

@code
{
    [Parameter] public Pelicula Pelicula { set; get; }
    [Parameter] public bool MostrarBotones { set; get; }
    [Parameter] public EventCallback<Pelicula> EliminarPeliculaCallBack { set; get; }
}
